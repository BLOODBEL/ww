@model Capluga.Entities.AgendaEnt
@{
    ViewBag.Title = "Registrar Cita";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/Template/styles/bootstrap4/RCita.css">

<main>

    @using (Html.BeginForm("RegistrarCita", "AgendaCita", FormMethod.Post, new { @class = "pt-3" }))
    {

        @Html.AntiForgeryToken()


        <h2>Registrar Citas</h2>
        <div class="form-group">
            <label class="control-label" for="Asunto">
                <i class="center"></i> ID Usuario
            </label>
            @Html.EditorFor(model => model.UserID, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.UserID, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label class="control-label" for="Asunto">
                <i class="center"></i> ID Direccion
            </label>
            @Html.EditorFor(model => model.AddressID, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.AddressID, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label class="control-label" for="Asunto">
                <i class="center"></i> Asunto
            </label>
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>


        <div class="form-group">
            <label class="control-label" for="Description">
                <i class="center"></i> Descripccion de la cita
            </label>
            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.ScheduleID, "Horario")
            @Html.DropDownList("HorarioID", (IEnumerable<SelectListItem>)ViewBag.horarios, "Seleccione un Horario", new { @class = "form-control form-control-lg" })
            @Html.ValidationMessageFor(model => model.ScheduleID)
        </div>

        <!-- Campos para otros datos de la entidad AgendaEnt -->

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Registrar
                </button>
            </div>
        </div>

    }

</main>
