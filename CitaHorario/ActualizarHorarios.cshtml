@model Capluga.Entities.HorarioEnt


@{
    ViewBag.Title = "Actualizar Horario";
    Layout = "~/Views/Shared/_LayoutAdm.cshtml"; // Asume que tienes un layout definido
}
}

<main>

    @using (Html.BeginForm("ActualizarHorarios", "CitaHorario", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()

        @Html.HiddenFor(model => model.ScheduleID)

        <h2>Actualizar Horario</h2>
        <div class="form-group">
            <label class="control-label" for="Dname">
                <i class="fas fa-calendar-alt"></i> Dia del Horario
            </label>
            @Html.EditorFor(model => model.Dname, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Dname, "", new { @class = "text-danger" })
        </div>


        <div class="form-group">
            <label class="control-label" for="DateandTime">
                <i class="fas fa-clock"></i> Fecha y Hora
            </label>
            @Html.EditorFor(model => model.DateandTime, new { htmlAttributes = new { @class = "form-control", @type = "datetime-local" } })
            @Html.ValidationMessageFor(model => model.DateandTime, "", new { @class = "text-danger" })
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Actualizar
                </button>
            </div>
        </div>


    }
</main>